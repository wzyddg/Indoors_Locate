<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainSettingActivity"
    android:background="@color/colorBackground">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        android:fitsSystemWindows= "true">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        style="@style/linearbelowToolbar">

        <LinearLayout
            style="@style/LinerForFriendlistSearch">

            <EditText
                android:layout_width="298dp"
                android:layout_height="50dp"
                android:id="@+id/editText"
                android:text="查找好友"
                android:textColor="#000000"
                android:layout_weight="0.7" />

            <SearchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/searchView"
                android:layout_weight="0.3"
                android:background="@android:drawable/ic_menu_search" />
        </LinearLayout>

        <LinearLayout
            style="@style/LinerForFriendlist">

            <ImageButton
                android:id="@+id/shortcutAvatar"
                style="@style/ImageButtonInFriendList" />

            <TextView
                android:id="@+id/friendName"
                style="@style/NameInFriendList" />
        </LinearLayout>

        <LinearLayout
            style="@style/LinerForFriendlist">

            <ImageButton
                android:id="@+id/shortcutAvatar1"
                style="@style/ImageButtonInFriendList" />

            <TextView
                android:id="@+id/friendName1"
                style="@style/NameInFriendList" />
        </LinearLayout>
        <LinearLayout
            style="@style/LinerForFriendlist">

            <ImageButton
                android:id="@+id/shortcutAvatar2"
                style="@style/ImageButtonInFriendList" />

            <TextView
                android:id="@+id/friendName2"
                style="@style/NameInFriendList" />
        </LinearLayout>
        <LinearLayout
            style="@style/LinerForFriendlist">

            <ImageButton
                android:id="@+id/shortcutAvatar3"
                style="@style/ImageButtonInFriendList" />

            <TextView
                android:id="@+id/friendName3"
                style="@style/NameInFriendList" />
        </LinearLayout>
        <LinearLayout
            style="@style/LinerForFriendlist">

            <ImageButton
                android:id="@+id/shortcutAvatar4"
                style="@style/ImageButtonInFriendList" />

            <TextView
                android:id="@+id/friendName4"
                style="@style/NameInFriendList" />
        </LinearLayout>
        <LinearLayout
            style="@style/LinerForFriendlist">

            <ImageButton
                android:id="@+id/shortcutAvatar5"
                style="@style/ImageButtonInFriendList" />

            <TextView
                android:id="@+id/friendName5"
                style="@style/NameInFriendList" />
        </LinearLayout>

    </LinearLayout>

    <!--android:layout_below="@+id/toolbar" />-->

</RelativeLayout>