<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.NoOp" parent="AppTheme">
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="AllAboutAvatar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
    </style>

    <style name="avatar">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:src">@drawable/avatar</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="avatarBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/citybg</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="labelLeft">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:text">摄影</item>
        <item name="android:layout_gravity">left|bottom</item>
        <item name="android:layout_marginLeft">110dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:foreground">#00ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@drawable/radious</item>
    </style>

    <style name="labelRight" parent="labelLeft">
        <item name="android:text">旅游</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:layout_marginRight">110dp</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="titleTextColor">@color/colorPrimaryLight</item>
    </style>

    <style name="linerContainer">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_below">@+id/AllAboutAvatar</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:background">#eff3f6</item>
    </style>

    <style name="linerForEachItem">
        <item name="android:layout_height">45dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="linerForEachItemWithMargin" parent="linerForEachItem">
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="LabelButton">
        <item name="android:clickable">true</item>
        <item name="android:background">#ffffff</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CotentButton" parent="LabelButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">0.61</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:height">45dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="LabelLong" parent="LabelButton">
        <item name="android:layout_weight">0.8</item>
    </style>

    <style name="arrowButton" parent="LabelButton">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">0.09</item>
        <item name="android:height">45dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="switchButton" parent="arrowButton">
        <item name="android:layout_weight">0.2</item>
    </style>

    <style name="BackToMainButton">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">取消</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="Inputmargin">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="LabelForInput" parent="Inputmargin">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#14273d</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="FirstLabelForInput" parent="LabelForInput">
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="Inputbar" parent="Inputmargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:ems">10</item>
        <item name="android:autoText">false</item>
        <item name="android:background">#ffffff</item>
        <item name="android:editable">true</item>
        <item name="android:textColor">#28333e</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:inputType">textShortMessage</item>
    </style>

    <style name="InputbarForPassword" parent="Inputbar">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="InputbarForMail" parent="Inputbar">
        <item name="android:inputType">textEmailSubject</item>
    </style>

    <style name="linearbelowToolbar">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="radioboxForGender">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="radioboxForGenderChecked" parent="radioboxForGender">
        <item name="android:checked">true</item>
    </style>

</resources>